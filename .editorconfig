; This file is for unifying the coding style for different editors and IDEs.
; More information at https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
max_line_length = 81
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[*.json]
indent_size = 2
